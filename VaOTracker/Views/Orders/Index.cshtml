@using VaOTracker.Models;

<h1>Pierre's Orders</h1>
@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li><a href='/orders/@order.Id'>@order.Title</a></li>
  }
</ul>

<a href="/orders/new">Add a new item.</a>

<form action="/orders/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
